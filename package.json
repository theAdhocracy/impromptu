{
	"name": "@theadhocracy/impromptu",
	"version": "0.2.2",
	"private": false,
	"dependencies": {
		"@testing-library/jest-dom": "^5.11.9",
		"@testing-library/react": "^11.2.5",
		"@testing-library/user-event": "^12.8.1",
		"polished": "^4.1.1",
		"prop-types": "^15.7.2",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"react-scripts": "^4.0.3",
		"styled-components": "^5.2.1"
	},
	"scripts": {
		"build": "tsc",
		"test": "react-scripts test",
		"storybook": "start-storybook -p 6006 -s public",
		"build-storybook": "build-storybook -o docs-build -s public",
		"build-storybook-docs": "build-storybook -s public --docs",
		"chromatic": "npx chromatic --project-token CHROMATIC_TOKEN --exit-zero-on-changes",
		"release": "auto shipit",
		"a11y": "build-storybook && axe-storybook"
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"babel": {
		"presets": [
			[
				"react-app",
				{
					"absoluteRuntime": false
				}
			]
		]
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"@babel/cli": "^7.13.0",
		"@chanzuckerberg/axe-storybook-testing": "^3.0.1",
		"@storybook/addon-a11y": "^6.1.21",
		"@storybook/addon-actions": "^6.1.21",
		"@storybook/addon-essentials": "^6.1.21",
		"@storybook/addon-links": "^6.1.21",
		"@storybook/node-logger": "^6.1.21",
		"@storybook/preset-create-react-app": "^3.1.6",
		"@storybook/react": "^6.1.21",
		"auto": "^10.18.3",
		"chromatic": "^5.6.3",
		"cross-env": "^7.0.3",
		"prettier": "^2.2.1",
		"@types/jest": "^26.0.23",
		"@types/node": "^15.3.0",
		"@types/react": "^17.0.5",
		"@types/react-dom": "^17.0.5",
		"@types/styled-components": "^5.1.7",
		"babel-jest": "^26.6.3",
		"babel-loader": "^8.2.2",
		"eslint": "^7.21.0",
		"eslint-plugin-jest": "^24.1.5",
		"eslint-plugin-jest-dom": "^3.6.5",
		"typescript": "^4.2.4"
	},
	"description": "A design system for theAdhocracy and associated sites.",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/theadhocracy/impromptu.git"
	},
	"keywords": [
		"design",
		"system",
		"theadhocracy"
	],
	"author": "Murray Adcock",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/theadhocracy/impromptu/issues"
	},
	"homepage": "https://github.com/theadhocracy/impromptu#readme",
	"publishConfig": {
		"registry": "https://npm.pkg.github.com"
	}
}
