{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": "./",
		"incremental": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"allowSyntheticDefaultImports": true,
		"module": "commonjs",
		"target": "ES5",
		"lib": ["ES6", "dom"],
		"sourceMap": true,
		"allowJs": true,
		"jsx": "react",
		"moduleResolution": "node",
		"rootDir": "../",
		"outDir": "dist",
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"declaration": true,
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"types": ["jest", "@testing-library/jest-dom"],
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": false
	},
	"include": ["src"],
	"exclude": [
		"node_modules",
		"build",
		"dist",
		"scripts",
		"acceptance-tests",
		"webpack",
		"jest",
		"src/setupTests.ts",
		"**/*/*.test.ts",
		"examples"
	]
}
